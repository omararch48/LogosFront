mixin Menu(page)
    .desktop-menu 
        .desktop-menu__navbar
            i.fa-solid.fa-bars.desktop-menu__icon
            ul.desktop-menu__menu
                li.desktop-menu__element
                    if page == 'index'
                        a(href="#index").desktop-menu__link.desktop-menu__link--selected Inicio
                    else 
                        a(href="index.html").desktop-menu__link Inicio
                li.desktop-menu__element
                    if page == 'us'
                        a(href="#us").desktop-menu__link.desktop-menu__link--selected Nosotros
                    else 
                        a(href="us.html").desktop-menu__link Nosotros
                li.desktop-menu__element
                    if page == 'contact'
                        a(href="#contact").desktop-menu__link.desktop-menu__link--selected Contacto
                    else 
                        a(href="contact.html").desktop-menu__link Contacto
        .desktop-menu__lateral-layout
            .desktop-menu__lateral
                .desktop-menu__lateral-head
                    i.fa-solid.fa-xmark.desktop-menu__lateral-close
                    img(src="img/jpg/sublogo_1.jpg", alt="Logos Institute Logo").desktop-menu__lateral-image
                ul.desktop-menu__lateral-menu
                    li.desktop-menu__lateral-element
                        if page == 'index'
                            a(href="#index").desktop-menu__link.bolder Inicio
                        else 
                            a(href="index.html").desktop-menu__link Inicio
                    li.desktop-menu__lateral-element
                        if page == 'us'
                            a(href="#us").desktop-menu__link.bolder Nosotros
                        else 
                            a(href="us.html").desktop-menu__link Nosotros
                    li.desktop-menu__lateral-element
                        if page == 'services'
                            a(href="#services").desktop-menu__link.bolder Servicios
                        else 
                            a(href="services.html").desktop-menu__link Servicios
                    li.desktop-menu__lateral-element
                        if page == 'blog'
                            a(href="#blog").desktop-menu__link.bolder Blog
                        else 
                            a(href="blog.html").desktop-menu__link Blog
                    li.desktop-menu__lateral-element
                        if page == 'contact'
