                            a(href="testimonials.html").desktop-menu__link Testimonios
                    li.desktop-menu__lateral-element
                        if page == 'qa'
                            a(href="#qa").desktop-menu__link.bolder Preguntas Frecuentes
                        else 
                            a(href="qa.html").desktop-menu__link Preguntas Frecuentes
                    li.desktop-menu__lateral-element
                        if page == 'about'
                            a(href="#about").desktop-menu__link.bolder Acerca de
                        else 
                            a(href="about.html").desktop-menu__link Acerca de
